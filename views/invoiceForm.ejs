<h1>New Invoice</h1>
<div id="form-container">
    <form action="/invoices/create/<%= invoice._id ? invoice._id : '' %>" method="POST">
        <label for="invoiceName">Name: </label>
        <input id="invoiceName" name="invoiceName" type="text" value=<%= invoice.invoiceName ? invoice.invoiceName : '' %>>
    
        <input type="hidden" id="invoice_id" name="invoice_id" value=<%= invoice._id %>>
        <label for="unitCost">Unit Cost: </label>
    
        <input id="unitCost" name="unitCost" type="text" value=<%= product.unitCost ? product.unitCost : '' %>>
        <label for="productCode">Product Code: </label>
    
        <input id="productCode" name="productCode" type="text" value=<%= product.productCode ? product.productCode : '' %>>
    
        <button type="submit" value="Submit" class="btn btn-success">Submit</button>
    </form>
    <a href="/products"><button class="btn btn-primary">Back to Products</button></a>
</div>
<%= errorMessage %>
